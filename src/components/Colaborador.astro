---
// Colaborador.astro
const { nombre, descripciones, logo, web, rrss, titulo1, titulo2, botonMas, colortitulo2 } = Astro.props;
---

<div class="colaborador mt-16">
    <div class="contenido bg-cyan-600 dark:bg-cyan-950">
        <div class="logo-container flex justify-center items-center mb-10">
            <img class="logo" src="/public/android-chrome-192x192.png" alt="">
            <!-- <img src={logo} alt={`Logotipo de ${nombre}`} class="logo" /> -->
        </div>
        <h3 class="nombre text-cyan-950 dark:text-cyan-600 font-bold mt-20">{nombre}</h3>
        <div class="descripcion min-h-52">
            <h3 class="titulo1">{titulo1}</h3>
            <h3 class={`titulo2 ${colortitulo2} font-bold`}>{titulo2}</h3>
            {descripciones && descripciones.map((descripciones: string, index: string) => (
                <p data-key={index} class="descripcion">{descripciones}</p>
            ))}
        </div>
        <a  href={botonMas}>
            <button class="bg-primary rounded-md px-4 py-2 text-white font-semibold transition-all ease-in-out duration-300 mb-5">
              Ver más <span class="animation_button opacity-0 inline-block transition-all ease-in-out duration-300"> > </span>
            </button>
        </a>
        <!-- <a href={web} target="_blank" class="web-link">Sitio Web</a>
        <div class="redes-sociales">
            {Object.entries(rrss).map(([red, enlace]) => (
                <a href={enlace as string} target="_blank" class="rrss-link">{red}</a>
            ))}
        </div>  -->
    </div>
</div>

<style>
:root {
    --color-fondo: #02475e;
    --color-texto: #ffffff;
    --color-acento: #00adb5;
    --fuente-principal: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    --tamano-texto: 15px;
    --espaciado: 20px;
}

.colaborador {
    display: flex;
    justify-content: center;
    max-width: 100%;
}

.contenido{
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin: 5%;
    border-radius: 10px;
    transition: transform 0.3s ease;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
}

.logo {
    position: absolute;
    width: 200px;
    height: auto;
    margin-bottom: 20px;
}

.contenido {
    padding: 0 var(--espaciado);
}

.nombre {
    font-size: 2rem;
    margin-bottom: var(--espaciado);
    font-family: var(--fuente-principal);
}
.titulo1 {
    font-size: var(--tamano-texto);
    color: var(--color-texto);
    margin-bottom: 5px;
    text-align: justify;
    font-family: var(--fuente-principal);
    padding: 0 var(--espaciado);
}
.titulo2 {
    font-size: var(--tamano-texto);
    text-align: justify;
    font-family: var(--fuente-principal);
    padding: 0 var(--espaciado);
}
.descripcion {
    font-size: var(--tamano-texto);
    color: var(--color-texto);
    margin-bottom: var(--espaciado);
    text-align: justify;
    font-family: var(--fuente-principal);
    padding: 0 var(--espaciado);
}

.web-link {
    display: inline-block;
    background-color: rgb(0 68 101 / var(--tw-bg-opacity));
    color: var(--color-texto);
    border-radius: 20px;
    padding: 10px 15px;
    margin: 5px;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

.web-link:hover {
    background-color: rgb(17 25 40 / var(--tw-bg-opacity));
}

.redes-sociales {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: var(--espaciado);
    margin-bottom: var(--espaciado);
}

.rrss-link {
    /* Estilos para botones a redes sociales se mantienen */
    display: inline-block;
    background: rgb(0 68 101 / var(--tw-bg-opacity));
    color: white;
    border-radius: 20px;
    padding: 5px 15px;
    margin: 5px;
    text-decoration: none;
}

.rrss-link:hover {
    background-color: rgb(17 25 40 / var(--tw-bg-opacity));
}

.containerBlogCard:hover .blogCard{
    transform: rotateY(180deg);
  }

  button:hover .animation_button{
    opacity: 1;
    transform: translateX(24px);
  }

button:hover {
    padding-right: 32px;
}

@media (max-width: 768px) {
    .colaborador {
        flex-direction: column;
    }

    .contenido{
        width: 90%;
    }

    .logo {
        width: 80px; /* Menor tamaño en dispositivos móviles */
    }

    .nombre {
        font-size: 1.1rem; /* Tamaño de texto ajustado para móviles */
    }

    .descripcion {
        font-size: var(--tamano-texto); /* Ajuste para mejor legibilidad en móviles */
    }
}
</style>
